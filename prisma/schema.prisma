generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserRole {
  id         String   @id
  name       String
  active     Boolean  @default(true)
  desc       String
  roleAccess Json     @default("[]")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  User       User[]
}

model User {
  id         String    @id
  name       String
  email      String?
  password   String?
  phone      String
  role       UserRole? @relation(fields: [userRoleId], references: [id])
  active     Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  userRoleId String?
}
