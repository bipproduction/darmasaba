model UserRole {
  id                 String               @id @default(cuid())
  name               String
  active             Boolean              @default(true)
  desc               String
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  User               User[]
  UserRoleAccessRole UserRoleAccessRole[]
}

model Jabatan {
  id        String   @id @default(cuid())
  name      String
  alias     String?
  active    Boolean  @default(true)
  desc      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User[]
}

// =========================================

model Desa {
  id        String   @id @default(cuid())
  name      String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User[]
}

model User {
  id         String    @id @default(cuid())
  name       String
  email      String?   @unique
  password   String?
  phone      String    @unique
  role       UserRole? @relation(fields: [userRoleId], references: [id])
  active     Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  userRoleId String?
  Jabatan    Jabatan?  @relation(fields: [jabatanId], references: [id])
  Desa       Desa?     @relation(fields: [desaId], references: [id])
  desaId     String?
  AuthLog    AuthLog[]
  jabatanId  String?
}

model AccessRole {
  id                 String               @id @default(cuid())
  name               String               @unique
  active             Boolean              @default(true)
  desc               String?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  UserRoleAccessRole UserRoleAccessRole[]
}

model UserRoleAccessRole {
  AccessRole   AccessRole? @relation(fields: [accessRoleId], references: [id])
  UserRole     UserRole?   @relation(fields: [userRoleId], references: [id])
  active       Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  accessRoleId String
  userRoleId   String

  @@id([accessRoleId, userRoleId])
}

model AuthLog {
  id        String   @id @default(cuid())
  user      User?    @relation(fields: [userId], references: [id])
  token     String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime
  userId    String?
}

model Otp {
  id        String   @id @default(cuid())
  phone     String   @unique
  code      String
  expiresAt DateTime
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
